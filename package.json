{
    "name": "blog-api",
    "version": "1.0.0",
    "description": "RESTful Blog API with authentication and authorization",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "test": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
        "blog",
        "api",
        "rest",
        "mongodb",
        "express"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "mongoose": "^8.0.3",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "dotenv": "^16.3.1",
        "express-validator": "^7.0.1",
        "slugify": "^1.6.6",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "typescript": "^5.3.3",
        "ts-node-dev": "^2.0.0",
        "@types/node": "^20.10.6",
        "@types/express": "^4.17.21",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/cors": "^2.8.17",
        "@types/morgan": "^1.9.9",
        "nodemon": "^3.0.2",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "eslint": "^8.56.0",
        "prettier": "^3.1.1"
    }
}